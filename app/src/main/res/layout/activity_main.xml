<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:background="#ffffff"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity">
    <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="?attr/selectableItemBackground"
            android:id="@+id/tv_group"
            android:gravity="center"
            android:text="Group可以用来控制一组view的可见性"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    <View android:layout_width="match_parent" android:layout_height="1px" android:background="#f5f5f5"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="?attr/selectableItemBackground"
            android:id="@+id/tv_barrier"
            android:gravity="center"
            android:text="Barrier (Added in 1.1)"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    <View android:layout_width="match_parent" android:layout_height="1px" android:background="#f5f5f5"/>
 <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="?attr/selectableItemBackground"
            android:id="@+id/tv_layer"
            android:gravity="center"
            android:text="Layer (Added in 2.0)"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    <View android:layout_width="match_parent" android:layout_height="1px" android:background="#f5f5f5"/>
<TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="?attr/selectableItemBackground"
            android:id="@+id/tv_self_layer"
            android:gravity="center"
            android:text="Layer (Added in 2.0)自定Helper"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    <View android:layout_width="match_parent" android:layout_height="1px" android:background="#f5f5f5"/>

</LinearLayout>