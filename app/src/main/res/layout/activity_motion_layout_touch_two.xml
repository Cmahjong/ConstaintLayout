<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/motion_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layoutDescription="@xml/scene_motion_layout_touch_two"
    tools:context=".motion_layout.MotionLayoutTouchTwoActivity">

    <LinearLayout
        android:id="@+id/ll_draw"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:gravity="center_vertical|end"
        android:orientation="vertical"
        android:paddingEnd="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_content2"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginEnd="20dp"
        android:gravity="end|center_vertical"
        android:text="tv_content2"
        app:layout_constraintBottom_toTopOf="@+id/tv_content3"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_content1" />

    <TextView

        android:id="@+id/tv_content1"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:gravity="end|center_vertical"
        android:text="tv_content1"
        app:layout_constraintBottom_toTopOf="@+id/tv_content2"
        app:layout_constraintEnd_toEndOf="@+id/tv_content2"
        app:layout_constraintStart_toStartOf="@+id/tv_content2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="spread_inside" />

    <TextView
        android:id="@+id/tv_content3"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:gravity="end|center_vertical"
        android:text="tv_content3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/tv_content2"
        app:layout_constraintStart_toStartOf="@+id/tv_content2"
        app:layout_constraintTop_toBottomOf="@+id/tv_content2" />
</androidx.constraintlayout.motion.widget.MotionLayout>